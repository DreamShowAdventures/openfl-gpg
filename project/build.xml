<xml>
	<include name="${HXCPP}/build-tool/BuildCommon.xml"/>
	
	<files id="android">
		<file name="android/achievement.h"/>
	</files>
	
	<files id="ios">
		<file name="ios/achievement.h"/>
	</files>
	
	<set name="name_prefix" value="lib" if="ios"/>
	<set name="IOS_ARCH" value="-v7" if="HXCPP_ARMV7"/>
	<set name="name_extra" value=".iphoneos${IOS_ARCH}" if="ios"/>
	<set name="name_extra" value=".iphonesim" if="ios"/>
	<set name="name_extra" value="-x86" if="simulator" unless="ios" />
	<set name="tool" value="exe" unless="ios"/>
	<set name="tool" value="static_link" if="ios"/>
	<set name="ndll-tool" value="dll" unless="ios"/>
	<set name="ndll-tool" value="static_link" if="ios"/>
	
	<target id="NDLL" output="${LIBPREFIX}openfl_gpg${MSVC_LIB_VERSION}${DEBUGEXTRA}${LIBEXTRA}" tool="linker" toolid="${STD_MODULE_LINK}">
		<outdir name="../ndll/${BINDIR}"/>
		
		<files id="android" if="android" />
		<files id="ios" if="ios" />
	</target>
	
	<target id="default">
		<target id="NDLL"/>
	</target>
</xml>