<xml>

<include name="${HXCPP}/build-tool/BuildCommon.xml"/>

<files id="common">
	<compilerflag value="-Iinclude"/>
	<file name="openflgpg.cpp" />
</files>

<target id="android" output="openflgpg" tool="linker" toolid="dll">
	<exe name="arm-linux-androideabi-g++"/>
	
	<ext value=".so"/>
	
	<set name="PLATFORM" value="android-14"/>
	<set name="TOOLCHAIN_VERSION" value="4.8"/>
	<set name="PLATFORM_ARCH" value="arch-arm" />
	
	<compilerflag name="-std=c++0x"/>
	
	<outflag value="-o"/>
	<prefix value="lib"/>
	<flag value="-nostdlib"/>
	<outdir name="../ndll/Android"/>
	<files id="common"/>
	
	<lib name="${ANDROID_NDK_ROOT}/platforms/${PLATFORM}/arch-arm/usr/lib/libstdc++.so"/>
	<lib name="${ANDROID_NDK_ROOT}/platforms/${PLATFORM}/arch-arm/usr/lib/libc.so"/>
	<lib name="${ANDROID_NDK_ROOT}/platforms/${PLATFORM}/arch-arm/usr/lib/libm.so"/>
	
	<lib name="lib/libgpg.a"/>
</target>

<target id="default">
	<target id="android" if="android" />
</target>

</xml>